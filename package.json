{
  "name": "vue3-realworld-example-app",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint:script": "eslint \"{src/**/*.{ts,vue},cypress/**/*.js}\"",
    "lint:tsc": "vue-tsc --noEmit",
    "lint": "concurrently \"pnpm build\" \"pnpm lint:tsc\" \"pnpm lint:script\"",
    "format": "prettier --write \"src/**/*.js\" \"src/**/*.ts\" \"src/**/*.vue\"",
    "test:unit": "jest",
    "test:e2e": "pnpm build && concurrently -rk -s first \"pnpm serve\" \"cypress run -c baseUrl=http://localhost:5000\"",
    "test:e2e:ci": "cypress run -C cypress.prod.json",
    "test": "pnpm test:unit && pnpm test:e2e"
  },
  "dependencies": {
    "harlem": "^3.1.8",
    "insane": "^2.6.2",
    "marked": "^4.3.0",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/vue": "^7.0.0",
    "@types/jest": "^29.5.0",
    "@types/marked": "^4.0.8",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/compiler-sfc": "^3.2.47",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.0.1",
    "cypress": "^12.9.0",
    "eslint": "^8.38.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.11.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.1",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.7",
    "rollup-plugin-analyzer": "^4.0.0",
    "stylelint": "^15.4.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^8.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.2.1",
    "vue-tsc": "^1.2.0",
    "vue3-jest": "27.0.0-alpha.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,vue}": "eslint --fix",
    "cypress/**/*.js": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {}
    },
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.vue$": "vue3-jest",
      "^.+\\js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,vue}",
      "!<rootDir>/src/config.ts"
    ],
    "moduleFileExtensions": [
      "vue",
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-test.ts"
    ]
  }
}
